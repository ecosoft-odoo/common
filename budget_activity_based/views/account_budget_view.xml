<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="crossovered_budget_view_form" model="ir.ui.view" >
            <field name="name">crossovered.budget.view.form</field>
            <field name="model">crossovered.budget</field>
            <field name="inherit_id" ref="account_budget.crossovered_budget_view_form"/>
            <field name="arch" type="xml">
            	<xpath expr="/form/sheet/div[@class='oe_title']" position="after">
                    <div class="oe_right oe_button_box" name="buttons">
	                    <button class="oe_inline oe_stat_button" icon="fa-bookmark-o">
	                        <field name="version" widget="statinfo"/>
	                    </button>	       
	                    <field name="latest_version" invisible="1"/>
	                    <button class="oe_inline oe_stat_button" icon="fa-thumbs-o-up"
	                    	string="Latest"
	                    	attrs="{'invisible': [('latest_version', '=', False)]}"/>
                    </div>
                </xpath>
            	<xpath expr="/form/sheet/group//label[@for='date_from']" position="before">
					<field name="fiscalyear_id" />
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='analytic_account_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/form//field[@name='analytic_account_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='date_from']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/form//field[@name='date_to']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='analytic_account_id']" position="before">
                    <field name="activity_group_id" />
                    <field name="activity_id" />
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/form//field[@name='analytic_account_id']" position="before">
                    <field name="activity_group_id" />
                    <field name="activity_id" />
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='date_from']" position="before">
                    <field name="period_id" />
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/form//field[@name='date_from']" position="before">
                    <field name="period_id" />
                </xpath>
        	</field>
        </record>
        
     </data>
</openerp>
